{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block page_title %}Week{% endblock %}

{% block page_content %}

    {{ form_start(form) }}
        {% for day in form.days %}

            <div class="col-12">
                <h4>{{ day.vars.data.date | date('l Y-m-d') }}</h4>
            </div>
            {% for meal in day.meals %}
                <h5>{{ meal.vars.data.type }}</h5>
                <div class="col-12">{{ form_row(meal.description) }}</div>
            {% endfor %}
            <input type="submit" value="OK" class="btn">
        {% endfor %}
    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
